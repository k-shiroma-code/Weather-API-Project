---
import Header from "../components/Header.jsx";
import Forecast from "../components/Forecast.jsx";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="SARIMA ML forecast for Tokyo weather with 14-day predictions" />
    <title>ML Forecast - SARIMA Weather Predictions</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #f0f0f0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Arial, sans-serif;
        line-height: 1.6;
      }

      main {
        min-height: 100vh;
        padding: 2rem;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
      }

      .page-header {
        text-align: center;
        margin-bottom: 3rem;
      }

      h1 {
        font-size: clamp(1.8rem, 4vw, 3rem);
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #3b82f6, #0ea5e9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .subtitle {
        font-size: 1rem;
        color: #cbd5e1;
        margin-bottom: 0.5rem;
      }

      .description {
        font-size: 0.95rem;
        color: #94a3b8;
        max-width: 600px;
        margin: 1rem auto 0;
      }

      .breadcrumb {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        margin-bottom: 2rem;
        font-size: 0.9rem;
      }

      .breadcrumb a {
        color: #0ea5e9;
        text-decoration: none;
        transition: color 0.2s;
      }

      .breadcrumb a:hover {
        color: #3b82f6;
        text-decoration: underline;
      }

      .breadcrumb span {
        color: #64748b;
      }

      @media (max-width: 768px) {
        main {
          padding: 1rem;
        }

        h1 {
          font-size: 1.8rem;
        }

        .page-header {
          margin-bottom: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <Header client:load />
    <main>
      <div class="container">
        <!-- Page Header -->
        <div class="page-header">
          <h1>ðŸ”® SARIMA Forecast</h1>
          <p class="subtitle">AI-Powered Weather Predictions for Tokyo</p>
          <p class="description">
            Advanced SARIMA model trained on 3 years of historical data to
            predict temperature trends with 95% confidence intervals
          </p>
          <div class="breadcrumb">
            <a href="/">Home</a>
            <span>/</span>
            <span>ML Forecast</span>
          </div>
        </div>

        <!-- Forecast Component -->
        <Forecast client:load />
      </div>
    </main>
  </body>
</html>