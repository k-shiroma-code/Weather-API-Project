---
import Header from "../components/Header.jsx";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Weather dashboard with real-time data and ML-powered SARIMA forecasts" />
    <title>Weather Dashboard - Real-Time Forecasts & Analytics</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        color: #f0f0f0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Arial, sans-serif;
        line-height: 1.6;
      }

      main {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 2rem;
      }

      .container {
        max-width: 900px;
        width: 100%;
      }

      .hero {
        text-align: center;
        margin-bottom: 3rem;
      }

      h1 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #3b82f6, #0ea5e9);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .subtitle {
        font-size: 1.1rem;
        color: #cbd5e1;
        line-height: 1.8;
        margin-bottom: 0.5rem;
      }

      .description {
        font-size: 0.95rem;
        color: #94a3b8;
        margin-top: 1rem;
      }

      .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin: 3rem 0;
      }

      .feature-card {
        background: rgba(30, 41, 59, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
      }

      .feature-card:hover {
        border-color: rgba(59, 130, 246, 0.5);
        background: rgba(30, 41, 59, 1);
        transform: translateY(-4px);
      }

      .feature-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
      }

      .feature-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #3b82f6;
      }

      .feature-text {
        font-size: 0.9rem;
        color: #cbd5e1;
      }

      .cta-buttons {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 2rem;
        flex-wrap: wrap;
      }

      .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        border: 2px solid;
        cursor: pointer;
        display: inline-block;
      }

      .btn-primary {
        background: linear-gradient(135deg, #3b82f6, #0ea5e9);
        color: white;
        border-color: transparent;
      }

      .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
      }

      .btn-secondary {
        background: transparent;
        color: #0ea5e9;
        border-color: #0ea5e9;
      }

      .btn-secondary:hover {
        background: rgba(14, 165, 233, 0.1);
        transform: translateY(-2px);
      }

      .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1.5rem;
        margin: 3rem 0;
        text-align: center;
      }

      .stat-item {
        padding: 1.5rem;
        background: rgba(59, 130, 246, 0.1);
        border-radius: 12px;
        border: 1px solid rgba(59, 130, 246, 0.2);
      }

      .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #3b82f6;
        margin-bottom: 0.5rem;
      }

      .stat-label {
        font-size: 0.9rem;
        color: #cbd5e1;
      }

      .footer-text {
        text-align: center;
        margin-top: 3rem;
        color: #64748b;
        font-size: 0.85rem;
      }

      @media (max-width: 640px) {
        main {
          padding: 1rem;
        }

        h1 {
          font-size: 2rem;
        }

        .cta-buttons {
          flex-direction: column;
        }

        .btn {
          width: 100%;
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <Header client:load />
    <main>
      <div class="container">
        <!-- Hero Section -->
        <div class="hero">
          <h1>üå§Ô∏è Weather Dashboard</h1>
          <p class="subtitle">
            Real-time weather data meets AI-powered predictions
          </p>
          <p class="description">
            Explore live weather conditions, interactive charts, and advanced
            SARIMA forecasts for Tokyo. Built with Open-Meteo API and machine
            learning.
          </p>
        </div>

        <!-- Features -->
        <div class="features">
          <div class="feature-card">
            <div class="feature-icon">üìä</div>
            <div class="feature-title">Real-Time Weather</div>
            <p class="feature-text">
              Search any city for current conditions, humidity, wind speed, and
              more.
            </p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">üîÆ</div>
            <div class="feature-title">ML Forecasts</div>
            <p class="feature-text">
              SARIMA model trained on 3 years of Tokyo data for accurate 14-day
              predictions.
            </p>
          </div>
          <div class="feature-card">
            <div class="feature-icon">üìà</div>
            <div class="feature-title">Interactive Charts</div>
            <p class="feature-text">
              Visualize temperature trends with confidence intervals and
              detailed analytics.
            </p>
          </div>
        </div>

        <!-- Stats -->
        <div class="stats">
          <div class="stat-item">
            <div class="stat-number">3</div>
            <div class="stat-label">Years of Data</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">1057</div>
            <div class="stat-label">Training Days</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">14</div>
            <div class="stat-label">Day Forecast</div>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="cta-buttons">
          <a href="/forecast" class="btn btn-primary">
            ‚ú® View ML Forecast
          </a>
          <a href="/table_charts" class="btn btn-secondary">
            üìä Explore Weather Data
          </a>
        </div>

        <!-- Footer -->
        <p class="footer-text">
          Powered by Open-Meteo API, FastAPI, React, and SARIMA
        </p>
      </div>
    </main>
  </body>
</html>